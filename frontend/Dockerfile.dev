# Development Dockerfile for Frontend
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy configuration files
COPY vite.config.ts ./
COPY tsconfig*.json ./
COPY index.html ./

# Copy environment file
COPY .env.docker .env

# Copy source code
COPY src/ ./src/
COPY public/ ./public/

# Expose the port
EXPOSE 3000

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]